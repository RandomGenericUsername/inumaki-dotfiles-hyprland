{
    "tray": {
        "spacing" : 10,
        "show-passive-items": true
    },
   "clock": {
        "interval": 1,
        "format": "{:%H:%M:%S}",
        "tooltip": true,
        "tooltip-format": "<tt><big>{calendar}</big></tt>",
        "calendar": {
            "mode": "month",
            "format": {
                "months": "<b>{}</b>",
                "days": "{}",
                "today": "<b><u>{}</u></b>"
            }
        },
        "locale": "en_US.UTF-8",
        "actions": {
            "on-click-right": "mode"
        }
    },
    // Workspaces
    "hyprland/workspaces": {
        "on-scroll-up": "hyprctl dispatch workspace r-1",
        "on-scroll-down": "hyprctl dispatch workspace r+1",
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{}",
        "format-icons": {
            "urgent": "",
            "active": "",
            "default": ""
        },
        "persistent-workspaces": {
            "*": 5
        }
    },
    // Taskbar
    "hyprland/taskbar": {
        "format": "{icon}",
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close"
    },
    // Hyprland Window
    "hyprland/window": {
        "separate-outputs": true
    },
    // Waybar Themes
    "custom/waybar-themes": {
        "format": "",
        "on-click": "{{cookiecutter.WAYBAR_SCRIPTS_DIR}}/theme-switcher.sh",
        "tooltip-format": "Select a theme for waybar"
    },
    // Wallpaper
    "custom/wallpaper-selector": {
        "format": "",
        "on-click": "{{cookiecutter.WALLPAPER_SELECTOR_SCRIPTS_DIR}}/wallpapers-and-effects-selector.sh wallpaper",
        "tooltip-format": "Select a wallpaper/effect. Use Ctlr+tab to navigate."
    },

    "custom/power-menu": {
        "format": "",
        "on-click": "wlogout -C {{cookiecutter.WLOGOUT_DIR}}/style.css -l {{cookiecutter.WLOGOUT_DIR}}/layout",
        "on-click-right": "hyprlock",
        "tooltip-format": "Left: Power menu\nRight: Lock screen"
    },

    "custom/battery-percentage": {
        "return-type": "json",
        "exec": "{{cookiecutter.DISPLAY_BATTERY_PERCENTAGE_SCRIPT}}",
        "interval": 2
        //"on-click": "{{cookiecutter.SYSTEM_SCRIPTS_DIR}}/toggle_power_profile.sh"
       
    },
    "custom/battery-percentage-icon": {
        "return-type": "json",
        "exec": "{{cookiecutter.DISPLAY_BATTERY_PERCENTAGE_ICON_SCRIPT}}",
        "interval": 2
        //"on-click": "{{cookiecutter.SYSTEM_SCRIPTS_DIR}}/toggle_power_profile.sh"
    }

    // Cliphist
    //"custom/cliphist": {
    //    "format": "",
    //    "on-click": "sleep 0.1 && {{cookiecutter.HYPR_DIR}}/scripts/cliphist.sh",
    //    "on-click-right": "sleep 0.1 && {{cookiecutter.HYPR_DIR}}/scripts/cliphist.sh d",
    //    "on-click-middle": "sleep 0.1 && {{cookiecutter.HYPR_DIR}}/scripts/cliphist.sh w",
    //    "tooltip-format": "Clipboard Manager"
    //},
}